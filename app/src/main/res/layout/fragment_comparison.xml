<?xml version="1.0" encoding="utf-8"?>


<LinearLayout
    android:id="@+id/container_images"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:okulus="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center_horizontal"
    android:orientation="vertical"
    android:padding="@dimen/activity_horizontal_margin">

    <com.vinaysshenoy.okulus.OkulusImageView
        android:id="@+id/image_okulus"
        android:layout_width="128dp"
        android:layout_height="128dp"
        android:layout_marginTop="12dp"
        android:scaleType="centerCrop"
        okulus:okulus_borderColor="#FF0000"
        okulus:okulus_borderWidth="2dp"
        okulus:okulus_fullCircle="false"
        okulus:okulus_cornerRadius="6dp"
        okulus:okulus_shadowColor="#9E9E9E"
        okulus:okulus_shadowWidth="2.5dp"
        />

    <ImageView
        android:id="@+id/image_normal"
        android:layout_width="128dp"
        android:layout_height="128dp"
        android:layout_marginTop="12dp"
        android:scaleType="centerInside"
        />
</LinearLayout>
